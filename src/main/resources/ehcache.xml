<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.ss.goldentown.domain.User" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.Authority" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.ss.goldentown.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.Host" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.Product" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.Agent" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.Deal" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.Billing" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.Board" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.Person" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.World" uses-template="simple"/>

    <cache alias="com.ss.goldentown.domain.Cemetery" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
